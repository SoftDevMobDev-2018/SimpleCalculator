<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: Remove nested linear layout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

  <TextView
      android:id="@+id/stack"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="16dp"
      android:text="0"
      android:textAlignment="textEnd"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      tools:ignore="HardcodedText"
      android:singleLine="true"
      android:ellipsize="start"
      />

  <TextView
      android:id="@+id/display"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:padding="16dp"
      android:text="0"
      android:textAlignment="textEnd"
      android:textSize="64sp"
      android:maxLines="2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      tools:ignore="HardcodedText"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:padding="16dp"
      app:layout_constraintVertical_bias="0"
      android:weightSum="4"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
          >

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="2"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="3"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
          >

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="4"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="5"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="6"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
          >

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="7"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="8"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="9"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        
        <Button
            android:id="@+id/numDecimal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="."
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />
        
        <Button
            android:id="@+id/num0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/opEqual"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            app:backgroundTint="@color/colorAccent"
            android:text="="
            android:textSize="24sp"
            tools:ignore="HardcodedText,MissingPrefix"
            />
      </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <Button
          android:id="@+id/opAdd"
          android:layout_width="match_parent"
          android:layout_height="@dimen/button_size"
          android:text="+"
          android:textSize="24sp"
          tools:ignore="HardcodedText,MissingPrefix"
          app:backgroundTint="@color/colorAccent"
          />

      <Button
          android:id="@+id/opSubstract"
          android:layout_width="match_parent"
          android:layout_height="@dimen/button_size"
          android:text="-"
          android:textSize="24sp"
          app:backgroundTint="@color/colorAccent"
          tools:ignore="HardcodedText,MissingPrefix"
          />

      <Button
          android:id="@+id/opMultiply"
          android:layout_width="match_parent"
          android:layout_height="@dimen/button_size"
          android:text="*"
          android:textSize="24sp"
          tools:ignore="HardcodedText,MissingPrefix"
          app:backgroundTint="@color/colorAccent"
          />

      <Button
          android:id="@+id/opDivide"
          android:layout_width="match_parent"
          android:layout_height="@dimen/button_size"
          android:text="/"
          android:textSize="24sp"
          app:backgroundTint="@color/colorAccent"
          tools:ignore="HardcodedText,MissingPrefix"
          />

    </LinearLayout>
  </LinearLayout>


</LinearLayout>
